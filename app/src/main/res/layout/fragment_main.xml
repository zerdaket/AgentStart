<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_fragment_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Start For (First) Result"/>

    <Button
        android:id="@+id/btn_fragment_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Start For (Second) Result"/>

    <TextView
        android:id="@+id/tv_fragment_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:\nResult:"/>

</LinearLayout>